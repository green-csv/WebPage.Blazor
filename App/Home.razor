@page "/"

@inherits BootInteropComponentBase
<PageTitle>Home</PageTitle>

<div class="flex flex-col h-full">

    <!-- Tabs (NOT scrolling) -->
    <div class="gap-4 m-4">
        <button class="@GetTabClass("projects")" @onclick="@(() => SelectTab("projects"))">
            <span class="crt-wiggle text-lime-400 text-shadow-terminal-teal">[</span>
            Projects
            <span class="crt-wiggle text-lime-400 text-shadow-terminal-teal">]</span>
        </button>
        <button class="@GetTabClass("entries")" @onclick="@(() => SelectTab("entries"))">
            <span class="crt-wiggle text-lime-400 text-shadow-terminal-teal">[</span>
            Entries
            <span class="crt-wiggle text-lime-400 text-shadow-terminal-teal">]</span>
        </button>
    </div>

    <!-- Divider -->
    <hr class="shadow-md mb-2 mx-4 h-[3px] bg-teal-400 rounded shadow-teal-200" />

    <!-- Scrollable Tab Content -->
    <div class="flex-1 overflow-y-auto font-mono text-lime-300">
        @switch (_activeTab)
        {
            case "projects":
                <ProjectsScreen />
                break;
            case "entries":
                <p>> Displaying Entries screen...</p>
                break;
        }
    </div>

</div>

@code {
    private string _activeTab = "projects";

    private void SelectTab(string tab)
    {
        _activeTab = tab;
    }

    private string GetTabClass(string tab) =>
        $"px-4 py-2 font-mono transition-all duration-200" +
        (_activeTab == tab
            ? " bg-teal-600 text-teal-950 text-shadow-terminal-teal-darker"
            : " text-lime-300 hover:bg-teal-600 text-shadow-terminal-teal");
}